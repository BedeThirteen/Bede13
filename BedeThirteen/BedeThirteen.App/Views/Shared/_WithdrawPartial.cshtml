@model MoneyAmountViewModel
<form method="post">
    <div class="form-group">
        <label class="text-black">Credit Card</label>
        <div class="input-group">
            <div class="input-group-prepend">
                <span class="input-group-text"><i class="fas fa-credit-card"></i></span>
            </div>
             
            <select id="cardsWithdrawDdl" class="form-control"></select>
        </div>
    </div>

    <div class="form-group">
        <label class="text-black">Amount</label>
        <div class="input-group">
            <div class="input-group-prepend">
                <span class="input-group-text"><i class="fas fa-money-bill-alt"></i></span>
            </div>

            <input asp-for="Amount" id="withdrawAmount" class="form-control">
        </div>
         <span asp-validation-for="Amount" class="text-danger"></span> 
    </div>
    
    <button class="subscribe btn btn-primary btn-block mb-3" data-parent="#accordion" id="withdrawBtn" data-toggle="collapse" href="#collapse2">Withdraw</button>
</form>